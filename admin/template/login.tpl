<div id="login_admin">
    <div id="login_admin_window">		
        <div id="login_admin_header"><h1>Вход в систему</h1></div>		
        <div id="login_admin_content">
            <form action="" method="POST">
                <div class="form_row">
                    <div class="row"><input type="text" name="login" placeholder="Учётная запись" value="{login}" /></div>
                </div>

                <div class="form_row">
                    <div class="row"><input type="password" name="password" placeholder="Пароль" value="" /></div>
                </div>

                <div class="form_row">
                    <input type="submit" name="ajax_login" id="login" value="Войти" />
                </div>
            </form>
        </div>
    </div>
</div>