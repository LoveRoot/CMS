<Form action="" method="POST" enctype="multipart/form-data">
		<section class="form_row">
				<section class="label">Заголовок:</section>
				<section class="row"><input type="text" name="title" value="" placeholder="Заголовок элемента / раздела" /></section>
		</section>

		<section class="form_row">
				<section class="label">Ссылка / Урл:</section>
				<section class="row"><input type="text" name="url" value="" placeholder="Ссылочное название страницы" /></section>
		</section>
		<section id="maincont">
				<section class="form_row">
					<section class="label">H1:</section>
					<section class="row"><input type="text" name="url" value="" placeholder="H1 заголовок для страницы" /></section>
				</section>

				<section class="form_row">
					<section class="label">Раздел:</section>
					<section class="row">
