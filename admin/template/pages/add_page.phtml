						<textarea name="full_text" placeholder="Полное описание описание на странице" id="fullnews"></textarea>
					</section>
				</section>
		</section>
		<section id="seo">
		</section>
		<section class="form_row">
				<section class="row"><input type="submit" name="submit" value="Отправить" /></section>
		</section>
